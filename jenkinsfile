pipeline {

    docker {
            image 'maven:3-alpine'
            label 'my-defined-label'
            args  '-v /tmp:/tmp'
        }
    stages{

    stage('Compile'){
                steps{
                    withMaven (maven: 'maven_3_6_1'){
                        sh 'mvn clean compile'
                    }

                }

            }
            stage('Test'){
                steps{
                    withMaven (maven: 'maven_3_6_1'){
                               sh 'mvn test'
                          }
                }

            }

            stage('Deploy'){
                    steps{
                    withMaven (maven: 'maven_3_6_1'){
                               sh 'mvn deploy'
                          }
                }
            }
    }

    }
